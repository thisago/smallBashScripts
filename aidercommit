#!/usr/bin/env bash

# Script to commit with a generated message

initialCommand="/run contextualize"
extraPrompt="$*"
if [[ "$extraPrompt" != "" ]]; then
  echo "Extra prompt provided: $extraPrompt"
  AIDER_COMMIT_PROMPT+="

$extraPrompt"
  initialCommand="" # Prevent calling `contextualize` if extra prompt is provided
fi

# Run Aider with the constructed prompt
aider <<<"$initialCommand
/commit"
if [[ $? -ne 0 ]]; then
  echo "Aider commit failed. Please check the output above." >&2
  exit 1
fi
